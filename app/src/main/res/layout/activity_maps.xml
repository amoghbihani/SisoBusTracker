<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context=".MapsActivity">

    <RelativeLayout
        android:id="@+id/top_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/top_bar"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/r_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/top_bar_text_margin"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:text="R:"
            android:textSize="@dimen/bus_route_number_text_size"/>

        <EditText
            android:id="@+id/bus_route_number_layout"
            android:layout_width="@dimen/bus_route_number_lengh"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/bus_route_number_margin"
            android:padding="@dimen/bus_route_number_padding"
            android:layout_toRightOf="@+id/r_text"
            android:background="@android:color/white"
            android:singleLine="true"
            android:maxLength="3"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/waiting_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/top_bar_radio_button_margin"
                android:text="@string/waiting"
                android:textColor="@android:color/white"
                android:textSize="@dimen/top_bar_radio_button_text_size"
                android:buttonTint="@android:color/white"
                android:checked="true"
                android:onClick="onRadioButtonClicked"/>

            <RadioButton
                android:id="@+id/inside_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/top_bar_radio_button_margin"
                android:text="@string/inside"
                android:textSize="@dimen/top_bar_radio_button_text_size"
                android:textColor="@android:color/white"
                android:buttonTint="@android:color/white"
                android:onClick="onRadioButtonClicked"/>
        </RadioGroup>
    </RelativeLayout>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment" />
</LinearLayout>
